colorscheme summerfruit256
set background=light

" appearance
set number
set title
set showmatch
syntax on
set virtualedit=onemore
set visualbell

" cursor
set cursorline
set cursorcolumn

" indenting
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set softtabstop=0
set autoindent
" set smartindent

" characters
set ignorecase
set smartcase

" search
set showmatch

" encoding
set encoding=utf-8
set fileencoding=utf-8
set fileformats=unix,dos,mac

" others
set nobackup
set noswapfile
set autoread
set hidden
set showcmd
set wildmode=list:longest
set laststatus=2
nnoremap j gj
nnoremap k gk


